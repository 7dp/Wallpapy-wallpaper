<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sd_fab_normal_size"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/fab_icon_size"
    android:paddingEnd="0dp">

    <ImageView
        android:id="@+id/iv_item_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@android:color/background_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/text_margin"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/tv_username_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_icon_size"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearanceMediumSmall"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="gadgethoax" />

        <TextView
            android:id="@+id/tv_name_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_icon_size"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearanceMediumSmall"
            android:textColor="@android:color/black"
            tools:text="Gadget Hoax" />

    </LinearLayout>

</LinearLayout>