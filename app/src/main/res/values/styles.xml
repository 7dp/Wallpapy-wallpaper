<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemeWithBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="AppThemeNoBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ToolbarTitleLight" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ToolbarThemeBlack" parent="AppThemeNoBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppThemeNoBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBar" parent="AppThemeNoBar">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="TextAppearanceLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearanceMediumSmall" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceMediumDrawable" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:color">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="TextAppearanceLargeTransparent" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearanceTabLayout" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/blackback</item>
    </style>

    <style name="AppThemeNoBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeNoBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
